  <audio id="music" controls>
    <!-- Pon aquí tu canción -->
    <source src="Girl of My Dreams.mp3" type="audio/mpeg" />
  </audio>

  

  
  

  <script>
    const music = document.getElementById('music');
    const heart = document.getElementById('heart');

    let bubbleInterval;

    music.addEventListener('play', () => {
      heart.classList.add('beat');
      bubbleInterval = setInterval(createBubble, 700);
    });
      bubbleInterval = setInterval(createBubble, 600);
    };

    music.addEventListener('pause', stopEffects);
    music.addEventListener('ended', stopEffects);

    function stopEffects() {
      heart.classList.remove('beat');
      clearInterval(bubbleInterval);
    }

    function createBubble() {
      const bubble = document.createElement('div');
      bubble.className = 'bubble';

      const size = Math.random() * 60 + 80;
      bubble.style.width = size + 'px';
      bubble.style.height = size + 'px';
      bubble.style.left = Math.random() * 90 + 'vw';
      bubble.style.animationDuration = (Math.random() * 4 + 6) + 's';

      const texts = ['ti amo', 'eres la mejor', 'mi traviesa', 'mi bebé guapa', 'mi snoopy', 'mi almita gemela'];
      bubble.textContent = texts[Math.floor(Math.random() * texts.length)];

      document.body.appendChild(bubble);
      bubble.addEventListener('animationend', () => bubble.remove());
    }
  </script>

</body>
